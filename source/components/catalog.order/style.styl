@import '../../styl/component-include.styl'

.b-catalog-order
  color #000000
  padding-top 48px

  &__action
    background-color #F1E9F4
    padding 64px 50px 50px
    text-align center
    margin-bottom 20px
    position relative

    .btn
      width 240px
      background-color #8A00C7
      border-color #8A00C7
      color #fff
      border-radius 0
      transition(opacity .3s ease)

      &:hover
        opacity .7
        color #fff

  &__action  &__icon
    position absolute
    top -48px
    left 50%
    transform( translateX(-50%))
    background-repeat no-repeat
    background-position center
    background-color #B14AC4
    border 5px solid #FFFFFF
    border-radius 50%
    width 96px
    height 96px
    display flex
    justify-content center
    align-items center

  &__subtitle
    font-size 18px
    margin-bottom 16px

  &__title
    font-size 26px
    margin-bottom 16px

  &__action &__p
    font-size 14px
    margin-bottom 16px

  &__info
    border 1px solid #F2F2F2
    padding 30px 30px 40px
    display flex
    justify-content space-between
    align-items flex-start

  &__info &__icon
    background-repeat no-repeat
    background-position center
    width 196px
    height 196px
    margin-right 30px
    flex-shrink 0

  &__row
    display grid
    grid-template-columns repeat(3, 1fr)
    grid-gap 15px
    margin-bottom 25px

  &__number,
  &__payment,
  &__time

    div
      font-size 18px
      margin-bottom 10px

    b
      font-size 26px
      font-weight normal
      display block
      word-break break-all
      line-height 1.2

    i
      font-style normal
      font-size 14px
      line-height 18px
      display block

  &__info &__p
    margin-bottom 30px

  @media(max-width 767px)

    &__action
      padding 78px 30px 44px
      line-height 1.4

    &__action  &__icon
      width 101px
      height 101px

    &__subtitle
      font-size 14px
      margin-bottom 6px

    &__title
      font-size 16px
      margin-bottom 13px

    &__action &__p
      font-size 10px
      margin-bottom 20px

    &__info
      display block

      .btn
        width 100%

    &__info &__icon
      margin 0 0 20px
      text-align center

    &__row
      display block
      grid-template-columns repeat(3, 1fr)
      margin-bottom 0

    &__number,
    &__payment,
    &__time
      text-align center
      margin-bottom 20px

      div
        font-size 14px
        margin-bottom 5px

      b
        font-size 14px

      i
        font-size 14px
        line-height 18px

    &__info &__p
      font-size 12px
      margin-bottom 20px